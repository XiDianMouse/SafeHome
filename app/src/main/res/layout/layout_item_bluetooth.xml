<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:id="@+id/item_bt"
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   android:orientation="horizontal"
   android:background="#addd"
   android:padding="10dp">
	<ImageView 
       android:id="@+id/ic_item_bt"
       android:layout_width="48dp"
	   	android:layout_height="48dp"
	   	android:layout_gravity="left|center_vertical"
	   	android:src="@drawable/wheelchair_blue"
	   	/>

  	<LinearLayout 
	    android:layout_width="0dp"
	    android:layout_height="wrap_content"
	    android:layout_weight="1"
	    android:orientation="vertical"
	    android:paddingLeft="3dp"
	   	android:layout_gravity="center_vertical"
  	 	>
  	 	<TextView 
  	 	    android:id="@+id/name_item_bt"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_gravity="center_vertical"
	    	android:textSize="20sp"
	    	android:textColor="#fff"
	    	android:text="打电话"
	        />
  	 	<TextView 
  	 	    android:id="@+id/status_item_bt"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_gravity="center_vertical"
	    	android:textSize="13sp"
	    	android:paddingLeft="3dp"
	    	android:textColor="#0af"
	    	android:text="打电话给张三"
	        />
   	</LinearLayout>

	<ProgressBar
	    android:id="@+id/bar_item_bt"
	    android:layout_width="40dp"
	    android:layout_height="40dp"
	    android:layout_gravity="right|center_vertical"
	    android:indeterminate="true" />

</LinearLayout>
