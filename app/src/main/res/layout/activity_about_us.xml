<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPageBg"
    android:orientation="vertical">

    <!--Material Design中的一个布局控件,可以通过属性设置显示一个圆角的类似卡片的视图-->
    <!--Material Design:由Google推出的全新的设计语言,这种设计语言旨在为手机、平板、台式机等平台提供更一致、更广泛的外观和感觉-->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        app:cardElevation="5.0dp"
        app:cardMaxElevation="15.dp"
        app:cardCornerRadius="10.0dp"
        app:cardPreventCornerOverlap="true">
            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:padding="10dp"
                android:text="@string/about_author"
                android:textColor="@color/colorText"
                android:textSize="16sp">
            </TextView>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        app:cardElevation="5.0dp"
        app:cardMaxElevation="15.dp"
        app:cardCornerRadius="10.0dp"
        app:cardPreventCornerOverlap="true">
            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:lineSpacingMultiplier="1.2"
                android:padding="10dp"
                android:text="@string/about_project"
                android:textColor="@color/colorText">
            </TextView>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_github"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        app:cardElevation="5.0dp"
        app:cardMaxElevation="15.dp"
        app:cardCornerRadius="10.0dp"
        app:cardPreventCornerOverlap="true">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cardview_item_bg"
                android:gravity="start"
                android:padding="10dp"
                android:text="@string/about_addr"
                android:textColor="@color/colorText">
            </TextView>
    </android.support.v7.widget.CardView>

</LinearLayout>

